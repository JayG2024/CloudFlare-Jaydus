# Cache Control Headers for Jaydus AI Platform

# Main HTML - Short cache for updates
/
  Cache-Control: public, max-age=300, must-revalidate
  
# Static assets - Short cache during development
/assets/js/*
  Cache-Control: public, max-age=300, must-revalidate
  
/assets/css/*
  Cache-Control: public, max-age=300, must-revalidate
  
# Images can be cached longer
/assets/images/*
  Cache-Control: public, max-age=86400
  
# API routes - no cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Force HTTPS and security headers
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(self), geolocation=(), payment=()
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; script-src 'self' https://unpkg.com 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.aimlapi.com https://api.lumalabs.ai https://google.serper.dev; font-src 'self' data:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-site